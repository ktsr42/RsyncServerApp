<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvwPasswordoptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="133dp"
        android:fontFamily="monospace"
        android:padding="@dimen/std_padding"
        android:text="Password"
        android:textAlignment="textStart"
        android:textSize="@dimen/ui_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- =============== -->

    <RadioGroup
        android:id="@+id/passwordSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/std_padding"
        android:textSize="@dimen/ui_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvwPasswordoptions">

        <RadioButton
            android:id="@+id/password_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None"
            android:onClick="setPasswordNone"
            />
        <RadioButton
            android:id="@+id/password_random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Random password: "
            android:onClick="setPasswordRandom"
            />
        <RadioButton
            android:id="@+id/password_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter password:"
            android:onClick="setPasswordCustom"
            />
        <EditText
            android:id="@+id/password_entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textSize="@dimen/ui_text_size"
            />
    </RadioGroup>

    <!-- =============== -->

    <Button
        android:id="@+id/btnStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="startRsyncServerRequest"
        android:padding="@dimen/std_padding"
        android:text="@string/btnStartRsyncServer"
        android:textSize="@dimen/ui_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordSelection" />

    <!-- =============== -->

    <TextView
        android:id="@+id/tvwRsyncLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="monospace"
        android:padding="@dimen/std_padding"
        android:text="rsyncline"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textIsSelectable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStart" />

    <!-- =============== -->

    <Button
        android:id="@+id/btnStop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="stopRsyncReceiver"
        android:padding="@dimen/std_padding"
        android:text="Stop"
        android:textSize="@dimen/ui_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvwRsyncLine" />

</androidx.constraintlayout.widget.ConstraintLayout>